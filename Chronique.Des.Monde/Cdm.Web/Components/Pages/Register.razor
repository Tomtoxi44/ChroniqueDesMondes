@page "/register"
@using Cdm.Web.Services.Authentication

<PageTitle>Inscription - Chronique des Mondes</PageTitle>

<div class="register-container animate-fade-in">
    <div class="register-card card">
        <div class="register-header">
            <img src="/Icons/Icon_cdm.webp" alt="Chronique des Mondes" class="logo animate-pulse" />
            <h1 class="register-title">Rejoindre l'Aventure</h1>
            <p class="register-subtitle">Créez votre compte d'aventurier</p>
        </div>

        <div class="register-form">
            <EditForm Model="@registerModel" OnValidSubmit="@HandleRegister">
                <DataAnnotationsValidator />
                <ValidationSummary class="validation-summary" />

                <div class="form-group">
                    <label class="form-label" for="username">Nom d'aventurier</label>
                    <InputText @bind-Value="registerModel.Username" class="form-control" id="username" placeholder="Votre nom d'utilisateur" />
                    <ValidationMessage For="@(() => registerModel.Username)" />
                </div>

                <div class="form-group">
                    <label class="form-label" for="email">Adresse email</label>
                    <InputText @bind-Value="registerModel.Email" type="email" class="form-control" id="email" placeholder="votre@email.com" />
                    <ValidationMessage For="@(() => registerModel.Email)" />
                </div>

                <div class="form-group">
                    <label class="form-label" for="password">Mot de passe</label>
                    <InputText @bind-Value="registerModel.Password" type="password" class="form-control" id="password" placeholder="Mot de passe sécurisé" />
                    <ValidationMessage For="@(() => registerModel.Password)" />
                </div>

                <div class="form-group">
                    <label class="form-label" for="confirmPassword">Confirmer le mot de passe</label>
                    <InputText @bind-Value="registerModel.ConfirmPassword" type="password" class="form-control" id="confirmPassword" placeholder="Confirmez votre mot de passe" />
                    <ValidationMessage For="@(() => registerModel.ConfirmPassword)" />
                </div>

                <div class="form-group terms">
                    <label class="checkbox-label">
                        <InputCheckbox @bind-Value="registerModel.AcceptTerms" />
                        <span class="checkmark"></span>
                        J'accepte les <a href="/terms" target="_blank">conditions d'utilisation</a>
                    </label>
                    <ValidationMessage For="@(() => registerModel.AcceptTerms)" />
                </div>

                @if (!string.IsNullOrEmpty(errorMessage))
                {
                    <div class="alert alert-error animate-fade-in">
                        @errorMessage
                    </div>
                }

                @if (!string.IsNullOrEmpty(successMessage))
                {
                    <div class="alert alert-success animate-fade-in">
                        @successMessage
                    </div>
                }

                <div class="form-actions">
                    <button type="submit" class="btn btn-primary register-btn" disabled="@isLoading">
                        @if (isLoading)
                        {
                            <span class="spinner"></span>
                            <span>Création du compte...</span>
                        }
                        else
                        {
                            <span>Créer mon compte</span>
                        }
                    </button>
                </div>
            </EditForm>

            <div class="register-footer">
                <p>Déjà un compte ?</p>
                <a href="/login" class="btn btn-secondary">Se connecter</a>
            </div>
        </div>
    </div>
</div>